# BBMS Authentication Service Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AuthID.ai Configuration
AUTHID_API_URL=https://api.authid.ai
AUTHID_CLIENT_ID=your-authid-client-id
AUTHID_CLIENT_SECRET=your-authid-client-secret
AUTHID_WEBHOOK_SECRET=your-authid-webhook-secret

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database Configuration (if needed for user persistence)
DATABASE_URL=your-database-url

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Building Management Specific
BUILDING_ID=bbms-main-building
FACILITY_NAME=Main Building Facility

# Emergency Override
EMERGENCY_BYPASS_CODE=emergency-code-change-this